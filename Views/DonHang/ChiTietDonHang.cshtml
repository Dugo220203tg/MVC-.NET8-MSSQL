@model List<TDProjectMVC.ViewModels.DonHangVM>
@{
    ViewData["Title"] = "ChiTietDonHang";
}
<style>
    /* Container chính của tiến trình */
    .timeline {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 20px;
        width: 100%;
        max-width: 1000px;
        margin: 0 auto;
    }

    /* Mỗi bước trong tiến trình */
    .step {
        text-align: center;
        position: relative;
    }

    /* Biểu tượng trạng thái */
    .step-icon {
        width: 50px;
        height: 50px;
        background-color: #f0f0f0;
        border-radius: 50%;
        border: 3px solid #4caf50;
        display: flex;
        justify-content: center;
        align-items: center;
        margin: 0 auto;
    }

    .step.active .step-icon {
        background-color: #4caf50;
        color: white;
    }

    /* Thanh nối giữa các bước */
    .step::after {
        content: '';
        position: absolute;
        width: 100%;
        height: 4px;
        background-color: #4caf50;
        top: 25px;
        left: 50%;
        z-index: -1;
    }

    .step:last-child::after {
        display: none;
    }

    /* Trạng thái không kích hoạt */
    .step.inactive .step-icon {
        background-color: #e0e0e0;
        border-color: #bdbdbd;
    }

    /* Nút thời gian và mô tả */
    .step-title {
        margin-top: 10px;
        font-size: 14px;
        color: #4caf50;
    }

    .step-time {
        font-size: 12px;
        color: #999;
    }
</style>

<div class="timeline">
