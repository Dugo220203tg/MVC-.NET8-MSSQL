@model IEnumerable<TDProjectMVC.ViewModels.DanhMucVM>

<div class="section-nav">
    <ul class="section-tab-nav tab-nav">
        @foreach (var item in Model)
        {
            <li class="@((ViewContext.HttpContext.Request.Query["loai"] == item.ID.ToString()) ? "active" : "")">
                <a asp-controller="Home" asp-action="Index" asp-route-loai="@item.ID">
                    @item.TenDanhMuc
                </a>
            </li>
        }
    </ul>
</div>

